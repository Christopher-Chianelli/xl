run_test x is
    write_line abs x
    write_line sqrt x
    // Avoid platform-dependent rounding errors for very small values
    write_line 0.25 + sin x
    write_line 0.25 + cos x
    write_line 0.25 + tan x
    write_line asin x
    write_line acos x
    write_line atan x
    write_line exp x
    write_line expm1 x
    write_line log x
    write_line log10 x
    write_line log2 x
    write_line log1p x
    write_line "---"

run_test 0.13331
run_test 1.3331
run_test pi
run_test 2.0*pi
