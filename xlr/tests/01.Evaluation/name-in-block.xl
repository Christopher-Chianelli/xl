slide1 T:text, Body ->
    Body
    writeln "Body at beginning"
    writeln T

slide2 T:text, Body ->
    writeln "Body in middle"
    Body
    writeln T

slide3 T:text, Body ->
    writeln "Body at end"
    writeln T
    Body

slide1 "Inline case", writeln "Inline code"
slide1 "Block case", { writeln "Block code" }

slide2 "Inline case", writeln "Inline code"
slide2 "Block case", { writeln "Block code" }

slide3 "Inline case", writeln "Inline code"
slide3 "Block case", { writeln "Block code" }
