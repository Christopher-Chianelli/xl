BINARY(Add,     Integer, Integer, Integer,      AS_INT ( LEFT +  RIGHT))
BINARY(FAdd,    Real,    Real,    Real,         AS_REAL( LEFT +  RIGHT))
BINARY(Sub,     Integer, Integer, Integer,      AS_INT ( LEFT -  RIGHT))
BINARY(FSub,    Real,    Real,    Real,         AS_REAL( LEFT -  RIGHT))
BINARY(Mul,     Integer, Integer, Integer,      AS_INT ( LEFT *  RIGHT))
BINARY(FMul,    Real,    Real,    Real,         AS_REAL( LEFT *  RIGHT))
BINARY(UDiv,    Integer, Integer, Integer,      AS_INT (ULEFT / URIGHT0))
BINARY(SDiv,    Integer, Integer, Integer,      AS_INT ( LEFT /  RIGHT0))
BINARY(FDiv,    Real,    Real,    Real,         AS_REAL( LEFT /  RIGHT0))
BINARY(URem,    Integer, Integer, Integer,      AS_INT (ULEFT % URIGHT0))
BINARY(SRem,    Integer, Integer, Integer,      AS_INT ( LEFT %  RIGHT0))
BINARY(FRem,    Real,    Real,    Real,         AS_INT (fmod(LEFT,RIGHT0)))
BINARY(Shl,     Integer, Integer, Integer,      AS_INT ( LEFT << RIGHT))
BINARY(LShr,    Integer, Integer, Integer,      AS_INT (ULEFT >> RIGHT))
BINARY(AShr,    Integer, Integer, Integer,      AS_INT ( LEFT >> RIGHT))
BINARY(And,     Integer, Integer, Integer,      AS_INT ( LEFT &  RIGHT))
BINARY(Or,      Integer, Integer, Integer,      AS_INT ( LEFT |  RIGHT))
BINARY(Xor,     Integer, Integer, Integer,      AS_INT ( LEFT ^  RIGHT))

UNARY(Neg,      Integer, Integer,               AS_INT (-LEFT))
UNARY(FNeg,     Real,    Real,                  AS_REAL(-LEFT))
UNARY(Not,      Integer, Integer,               AS_INT (~LEFT))

BINARY(ICmpEQ,  Name,    Integer, Integer,      AS_BOOL( LEFT ==  RIGHT))
BINARY(ICmpNE,  Name,    Integer, Integer,      AS_BOOL( LEFT !=  RIGHT))
BINARY(ICmpUGT, Name,    Integer, Integer,      AS_BOOL(ULEFT >  URIGHT))
BINARY(ICmpUGE, Name,    Integer, Integer,      AS_BOOL(ULEFT >= URIGHT))
BINARY(ICmpULT, Name,    Integer, Integer,      AS_BOOL(ULEFT <  URIGHT))
BINARY(ICmpULE, Name,    Integer, Integer,      AS_BOOL(ULEFT <= URIGHT))
BINARY(ICmpSGT, Name,    Integer, Integer,      AS_BOOL( LEFT >   RIGHT))
BINARY(ICmpSGE, Name,    Integer, Integer,      AS_BOOL( LEFT >=  RIGHT))
BINARY(ICmpSLT, Name,    Integer, Integer,      AS_BOOL( LEFT <   RIGHT))
BINARY(ICmpSLE, Name,    Integer, Integer,      AS_BOOL( LEFT <=  RIGHT))

// The following relies on 'true' > 'false' alphabetically!!!
BINARY(BCmpEQ,  Name,    Name,    Name,         AS_BOOL( LEFT ==  RIGHT))
BINARY(BCmpNE,  Name,    Name,    Name,         AS_BOOL( LEFT !=  RIGHT))
BINARY(BCmpGT,  Name,    Name,    Name,         AS_BOOL( LEFT >   RIGHT))
BINARY(BCmpGE,  Name,    Name,    Name,         AS_BOOL( LEFT >=  RIGHT))
BINARY(BCmpLT,  Name,    Name,    Name,         AS_BOOL( LEFT <   RIGHT))
BINARY(BCmpLE,  Name,    Name,    Name,         AS_BOOL( LEFT <=  RIGHT))

BINARY(FCmpOEQ, Name,    Real,    Real,         AS_BOOL(LEFT == RIGHT))
BINARY(FCmpONE, Name,    Real,    Real,         AS_BOOL(LEFT != RIGHT))
BINARY(FCmpOGT, Name,    Real,    Real,         AS_BOOL(LEFT >  RIGHT))
BINARY(FCmpOGE, Name,    Real,    Real,         AS_BOOL(LEFT >= RIGHT))
BINARY(FCmpOLT, Name,    Real,    Real,         AS_BOOL(LEFT <  RIGHT))
BINARY(FCmpOLE, Name,    Real,    Real,         AS_BOOL(LEFT <= RIGHT))

// BINARY(FCmpORD, Name,    Real,    Real,         AS_BOOL(LEFT == RIGHT))
// BINARY(FCmpUNO, Name,    Real,    Real,         AS_BOOL(LEFT == RIGHT))

BINARY(FCmpUEQ, Name,    Real,    Real,         AS_BOOL(LEFT == RIGHT))
BINARY(FCmpUNE, Name,    Real,    Real,         AS_BOOL(LEFT != RIGHT))
BINARY(FCmpUGT, Name,    Real,    Real,         AS_BOOL(LEFT >  RIGHT))
BINARY(FCmpUGE, Name,    Real,    Real,         AS_BOOL(LEFT >= RIGHT))
BINARY(FCmpULT, Name,    Real,    Real,         AS_BOOL(LEFT <  RIGHT))
BINARY(FCmpULE, Name,    Real,    Real,         AS_BOOL(LEFT <= RIGHT))

BINARY(BCmpUEQ, Name,    Name,    Name,         AS_BOOL(LEFT_B ==  RIGHT_B))
BINARY(BCmpUNE, Name,    Name,    Name,         AS_BOOL(LEFT_B !=  RIGHT_B))
BINARY(BCmpUGT, Name,    Name,    Name,         AS_BOOL(LEFT_B >   RIGHT_B))
BINARY(BCmpUGE, Name,    Name,    Name,         AS_BOOL(LEFT_B >=  RIGHT_B))
BINARY(BCmpULT, Name,    Name,    Name,         AS_BOOL(LEFT_B <   RIGHT_B))
BINARY(BCmpULE, Name,    Name,    Name,         AS_BOOL(LEFT_B <=  RIGHT_B))
BINARY(BAnd,    Name,    Name,    Name,         AS_BOOL(LEFT_B and RIGHT_B))
BINARY(BOr,     Name,    Name,    Name,         AS_BOOL(LEFT_B or  RIGHT_B))
BINARY(BXor,    Name,    Name,    Name,         AS_BOOL(LEFT_B xor RIGHT_B))
UNARY(BNot,     Name,    Name,                  AS_BOOL(not LEFT_B))


// ============================================================================
// 
//   Special opcodes that perform XL-specific operations
// 
// ============================================================================

UNARY(TreeKind,         Integer, Tree,          AS_INT (left.Kind()))
UNARY(TreeLeft,         Tree,    Prefix,        left.left)
UNARY(TreeRight,        Tree,    Prefix,        left.right)
UNARY(InfixName,        Text,    Infix,         AS_TEXT(left.name))
UNARY(TextOpening,      Text,    Text,          AS_TEXT(left.opening))
UNARY(TextClosing,      Text,    Text,          AS_TEXT(left.closing))
UNARY(BlockChild,       Tree,    Block,         left.child)
UNARY(BlockOpening,     Text,    Block,         AS_TEXT(left.opening))
UNARY(BlockClosing,     Text,    Block,         AS_TEXT(left.closing))
