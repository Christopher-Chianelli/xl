use XL.POINTER
use XL.POINTER.HEAP
use XL.UI.CONSOLE

type list is record with
   next  : pointer to record
   value : integer

L : pointer [list]

for I in 1..100 loop
    new : pointer to list := Allocate(40U)
    new.next := L
    L := new
    new.value := I

P : pointer to list := L
while P <> nil loop
    Write P.value
    P := P.next
