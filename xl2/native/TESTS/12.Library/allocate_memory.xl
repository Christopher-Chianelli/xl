use XL.POINTER
use XL.POINTER.HEAP
use XL.UI.CONSOLE

type list_ptr is pointer to list

type list is record with
   next  : list_ptr
   value : integer

L : list_ptr

for I in 1..100 loop
    new : list_ptr := Allocate(40U)
    new.next := L
    L := new
    new.value := I

P : list_ptr := L
while P <> nil loop
    Write P.value
    P := P.next
