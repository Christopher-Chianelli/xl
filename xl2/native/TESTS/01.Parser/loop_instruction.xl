// CMD=%x -parse %f -show

procedure Test is

    // Check what happens with infix-only operators
    if Condition
    then X := 0
    else Y := 0

    // Check with infix loop
    while X < 0 loop X := X + 1
    while X < 0
    loop X := X+1

    X := 0
    loop 
        X := X + 1

